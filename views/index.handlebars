<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="topTitle">
			<img src="assets/img/burger.png" alt="burger">
			<h1>Eat Da Burger!</h1>
		</div>
	</div>		
	<div class="row" id="burgersAvail">		
		<div class="col-md-6">
			<h3>Available burgers to devour!</h3>
			<ul>
				{{#each burger_data}}
				{{#unless this.devoured}}	
				<br>			
				<li>
					{{this.id}}. {{this.burger_name}}
				</li>					
				<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
					<input type="hidden" name="burger_id" type="text" value={{this.id}}>					
					<button type="submit" class="btn btn-default">Devour it!</button>
					<br>
				</form>				
				{{/unless}}
				{{/each}}
			</ul>		
	</div>
	<div class="col-md-6" id="devoured">
		<h3>Burgers that have been devoured!</h3>
		<br>
		<ul>
		{{#each burger_data}}  {{#if this.devoured}}
		<li>
			<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
			</li>
			{{/if}}
		{{/each}}
		</ul>
	</div>	
{{!-- </div>

<div class="container"> --}}
	<div class="row" id="addBurger">
		<div class="col-md-12 text-center">
			<p>Enter a burger you would like to eat!</p>
			<form action="/burgers/create" method="POST">
				<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>	
			<br>
			<img src="assets/img/wimpy2.jpg" alt="burger">		
		</div>
	</div>
</div>